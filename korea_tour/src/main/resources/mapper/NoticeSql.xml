<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bitcamp.korea_tour.model.mapper.NoticeMapper">
	<select id="getTotalCount" resultType="int">
		select count(*) from shop
	</select>
	<select id="getAllDatas" resultType="notice">
	      select * from shop order by noticeNum
   </select>
   <insert id="insertNotice" parameterType="notice">
      insert into notice (title,content,writeDay,view)
       values (#{title},#{content},#{view},now())
   </insert>
   <select id="getData" parameterType="String" resultType="notice">
      select * from shop where noticeNum=#{noticeNum}
   </select>
   <update id="updateShop" parameterType="notice">
      update shop set title=#{title},content=#{content}
       where noticeNum=#{noticeNum}
   </update>
   <delete id="deleteShop" parameterType="String">
      delete from shop where noticeNum=#{noticeNum}
   </delete>

</mapper>

