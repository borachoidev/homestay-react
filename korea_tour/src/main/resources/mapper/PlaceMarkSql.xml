<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.korea_tour.model.mapper.PlaceMarkMapper">
	<select id="getTotalPlaceMark">
		select count(*) from placeMark where userNum=#{userNum}
	</select>
	
	<insert id="insertPlaceMark" parameterType="placemark">
		insert into placeMark (userNum,placeNum) values (#{userNum},#{placeNum})
	</insert>
	<delete id="deletePlaceMark" parameterType="HashMap">
		delete from placeMark where userNum=#{useNum} and placeNum=#{placeNum}
	</delete>
	
</mapper>