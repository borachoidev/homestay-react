<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.korea_tour.model.mapper.CourseMarkMapper">
	<select id="getTotalCourseMark" parameterType="int" resultType="int">
		select count(*) from courseMark where userNum=#{userNum}
	</select>
	<insert id="insertCourseMark" parameterType="coursemark">
		insert into courseMark (userNum,courseNum) values (#{loginNum},#{courseNum})
	</insert>
	<delete id="deleteCourseMark" parameterType="HashMap">
		delete from courseMark where userNum=#{loginNum} and courseNum=#{courseNum}
	</delete>
	
</mapper>