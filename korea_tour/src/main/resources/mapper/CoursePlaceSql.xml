<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.korea_tour.model.mapper.CoursePlaceMapper">

<insert id="insertCoursePlace" parameterType="courseplace">
	insert into coursePlace (userNum,courseNum,placeNum,orderNum) values (#{userNum},#{courseNum},#{placeNum},#{orderNum})
</insert>
<delete id="deleteCoursePlace" parameterType="HashMap">
	delete from coursePlace where placeNum=#{placeNum} and courseNum=#{courseNum}
</delete>
<select id="getTotalCoursePlace" parameterType="int" resultType="int">	<!-- 코스안의 관광지 개수 -->
	select count(*) from coursePlace where courseNum=#{courseNum}
</select>

<update id="updateCourseName" parameterType="int"><!-- 코스detail에서 orderNum 수정 -->
	update coursePlace set orderNum=#{orderNum} where courseNum=#{courseNum} 
</update>

</mapper>