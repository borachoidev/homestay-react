<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cmapper">
	<select id="myCourseCount" resultType="int">
		select count(*) from course where userNum=#{userNum}
	</select>
	<select id="getMyCourseData" resultType="cdto">
		select * from course where userNum=#{userNum}
	</select>
	<insert id="insertCourseTitle" parameterType="cdto">
		insert into course (name,viewOrNot,userNum) values (#{name},2,#{userNum})
	</insert>
	<delete id="deleteMyCourse" parameterType="int">
			delete from course where courseNum=#{courseNum}
	</delete>
</mapper>